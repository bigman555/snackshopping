.fenlei {
  width: 100%;
  display: flex;
}
.fenlei .left {
  flex: 15%;
  display: flex;
  flex-direction: column;
  margin: 5rpx;
  align-items: center;
}
.fenlei .left view text {
  height: 80rpx;
  line-height: 80rpx;
}
.fenlei .left view .active {
  color: #aa976c;
}
.fenlei .right {
  flex: 85%;
  display: flex;
  justify-content: center;
  text-align: center;
}
.fenlei .right image {
  width: 100%;
  height: 280rpx;
  margin-bottom: 20rpx;
}
.fenlei .right view {
  color: #aa976c;
}
.fenlei .right .rightItem {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
.fenlei .right .rightItem view {
  width: 33.33%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
}
.fenlei .right .rightItem view image {
  width: 90%;
  height: 150%;
}
